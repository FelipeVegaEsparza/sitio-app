---
import PodcastCard from './PodcastCard.astro';

interface Podcast {
    title: string;
    description: string;
    imageUrl: string;
    audioUrl: string;
    duration: string;
    episodeNumber: number;
    season: string;
}

interface Props {
    podcasts: Podcast[];
}

const { podcasts } = Astro.props;

const podcastsArray = Array.isArray(podcasts) ? podcasts : (podcasts && Array.isArray(podcasts.data)) ? podcasts.data : [];

const latestPodcasts = podcastsArray.slice(0, 4);
---

<section id="podcasts" class="latest-podcasts-section">
    <div class="container">
        <div class="section-title-wrapper">
            <div class="title-left">
                <i class="section-icon fas fa-podcast"></i>
                <h2 class="section-title">Podcasts</h2>
            </div>
            <p class="section-description">Escucha nuestros Ãºltimos episodios.</p>
        </div>
        <div class="podcasts-grid">
            {latestPodcasts.map(item => (
                <PodcastCard podcast={item} />
            ))}
        </div>
    </div>
</section>

<!-- Modal Structure -->
<div id="podcast-modal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <button id="podcast-modal-close-btn" class="modal-close-btn">&times;</button>
        <img id="podcast-modal-image" src="" alt="" class="modal-image">
        <div class="modal-body">
            <div class="modal-meta">
                <span id="podcast-modal-season"></span>
                <span>&bull;</span>
                <span id="podcast-modal-episode"></span>
                <span>&bull;</span>
                <span id="podcast-modal-duration"></span>
            </div>
            <h2 id="podcast-modal-title" class="modal-title"></h2>
            <p id="podcast-modal-description" class="modal-description"></p>
            <audio id="podcast-modal-audio" controls src=""></audio>
        </div>
    </div>
</div>

<script>
    document.addEventListener('astro:page-load', () => {
        const section = document.querySelector('.latest-podcasts-section');
        if (!section) return;

        const modal = document.getElementById('podcast-modal');
        const modalCloseBtn = document.getElementById('podcast-modal-close-btn');
        const modalTitle = document.getElementById('podcast-modal-title');
        const modalDescription = document.getElementById('podcast-modal-description');
        const modalAudio = document.getElementById('podcast-modal-audio');
        const modalImage = document.getElementById('podcast-modal-image');
        const modalSeason = document.getElementById('podcast-modal-season');
        const modalEpisode = document.getElementById('podcast-modal-episode');
        const modalDuration = document.getElementById('podcast-modal-duration');

        function openModal(data) {
            if (!modal || !modalTitle || !modalDescription || !modalAudio || !modalImage || !modalSeason || !modalEpisode || !modalDuration) return;
            
            modalTitle.textContent = data.title;
            modalDescription.textContent = data.description;
            modalAudio.src = data.audioUrl;
            modalImage.src = data.imageUrl;
            modalImage.alt = data.title;
            modalSeason.textContent = data.season;
            modalEpisode.textContent = `Episodio ${data.episodeNumber}`;
            modalDuration.textContent = data.duration;

            modal.style.display = 'flex';
            modalAudio.play();
        }

        function closeModal() {
            if (!modal || !modalAudio) return;
            modal.style.display = 'none';
            modalAudio.pause();
            modalAudio.src = '';
        }

        section.addEventListener('click', (e) => {
            const playButton = (e.target as HTMLElement).closest('.play-button');
            if (playButton) {
                const data = (playButton as HTMLElement).dataset;
                openModal({
                    title: data.title,
                    description: data.description,
                    audioUrl: data.audioUrl,
                    imageUrl: data.imageUrl,
                    season: data.season,
                    episodeNumber: data.episodeNumber,
                    duration: data.duration
                });
            }
        });

        modalCloseBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });
    });
</script>

<style>
    .latest-podcasts-section {
        padding: 4rem 2rem;
        background-color: #f8f9fa;
    }
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }
    .section-title-wrapper {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between; /* Pushes title and description apart */
        margin-bottom: 2.5rem;
        animation: fadeInDown 0.8s ease-out;
        border-bottom: 1px solid #eee;
        padding-bottom: 1.5rem;
    }
    .title-left {
        display: flex;
        align-items: center;
    }
    .section-icon {
        font-size: 1.8rem; /* Slightly smaller icon */
        color: #0d6efd;
        margin-right: 1rem; /* Space between icon and title */
    }
    .section-title {
        font-size: 2.2rem; /* Slightly smaller title */
        font-weight: 700;
        text-align: left;
        margin: 0;
        color: #212529;
    }
    .section-description {
        font-size: 1rem;
        color: #6c757d;
        margin: 0;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .podcasts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 2000;
    }
    .modal-content {
        background: #fff;
        border-radius: 12px;
        max-width: 400px;
        width: 90%;
        position: relative;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        text-align: left;
        overflow: hidden;
    }
    .modal-close-btn {
        position: absolute;
        top: 0.5rem;
        right: 1rem;
        background: none;
        border: none;
        font-size: 2.5rem;
        color: #fff;
        cursor: pointer;
        text-shadow: 0 2px 4px rgba(0,0,0,0.5);
        z-index: 1;
    }
    .modal-image {
        width: 100%;
        height: auto;
        aspect-ratio: 1 / 1;
        object-fit: cover;
    }
    .modal-body {
        padding: 1.5rem;
    }
    .modal-meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
    }
    .modal-title {
        color: #212529;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }
    #podcast-modal-audio {
        width: 100%;
        margin-top: 1rem;
    }
    .modal-description {
        color: #495057;
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        .podcasts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
